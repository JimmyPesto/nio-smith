[Unit]
Description=A matrix bot that does amazing things!

[Service]
Type=simple
User=nio-smith
Group=nio-smith
WorkingDirectory=/path/to/nio-smith/docker
ExecStart=/usr/bin/docker-compose up nio-smith
ExecStop=/usr/bin/docker-compose stop nio-smith
RemainAfterExit=yes
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target